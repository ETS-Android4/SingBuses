<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.itachi1706.busarrivalsg"
    android:installLocation="internalOnly" >

    <uses-permission android:name="android.permission.INTERNET" /> <!-- Get all the API data duh -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- Check if there's internet access -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- Allows write to SD root -->

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> <!-- Receives the intent when boot completes -->


    <!-- For getting your current location pre-GPS (so that you don't need GPS to run) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="4a76e5bed29f3c6bc0d8e90c16212c07cb8efbc0" />
        <activity
            android:name=".ListAllBusStops"
            android:label="@string/title_activity_list_all_bus_stops" >
        </activity>
        <activity
            android:name=".AddBusStops"
            android:label="@string/title_activity_add_bus_stops" >
        </activity>
        <activity
            android:name=".MainSettings"
            android:label="@string/title_activity_main_settings" >
        </activity>
        <activity
            android:name=".BusServicesAtStop"
            android:label="@string/title_activity_bus_services_at_stop" >
        </activity>

        <service
            android:name=".Services.PebbleCommunications"
            android:exported="false"
            tools:ignore="InnerclassSeparator" >
        </service>

        <receiver
            android:name=".CompleteBootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
