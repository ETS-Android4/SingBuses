<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="100dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@color/white"
            android:id="@+id/card_view"
            android:layout_alignRight="@+id/refresh_favourites"
            android:layout_alignEnd="@+id/refresh_favourites"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pebbleImg"
                    android:src="@drawable/pebble_steel"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pebble Btn Press (DEBUG)"
                    android:id="@+id/pressedBtn"
                    android:textColor="@color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/pebbleImg"
                    android:layout_toEndOf="@+id/pebbleImg" />

                <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/pebbleConnectionStatus"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/pebbleImg"
                    android:layout_toEndOf="@+id/pebbleImg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="PebbleApp install status soon"
                    android:id="@+id/pebbleAppStatus"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/pebbleImg"
                    android:layout_toEndOf="@+id/pebbleImg"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="FW Version"
                    android:id="@+id/pebbleFW"
                    android:layout_below="@+id/pebbleConnectionStatus"
                    android:layout_toRightOf="@+id/pebbleImg"
                    android:layout_toEndOf="@+id/pebbleImg"
                    android:textColor="@color/black" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Favourites"
            android:id="@+id/tvFav"
            android:layout_below="@+id/card_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh_favourites"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvFav"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" >

            <!--suppress AndroidElementNotAllowed -->
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lvFav" />

        </android.support.v4.widget.SwipeRefreshLayout>

    </RelativeLayout>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_fab"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_gravity="end|bottom"
        android:src="@drawable/plus_black_48"
        app:elevation="@dimen/fab_elevation"
        app:borderWidth="0dp"
        android:adjustViewBounds="false" />


</FrameLayout>